{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/types",
    "types": ["node", "jest"]
  },
  "exclude": ["*/__test__/*"],
  "include": ["src"]
}
